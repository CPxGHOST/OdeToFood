@using OdeToFood.core
@model Restaurant
   
    <div class="card" style="margin-bottom:1rem">
        <div class="card-header">
            <h1>@Model.Name</h1>
        </div>
        <div class="card-body">
            <h5 class="card-title">Food Type : @Model.Cuisine</h5>
            <p class="card-text">This restaurant is located in : @Model.Location</p>
            <a class="btn btn-dark" asp-page="./Detail" asp-route-restarauntId="@Model.ID">Find Out More</a>
            <a class="btn btn-dark" asp-page="./EditRestaurant" asp-route-restarauntId="@Model.ID">Edit</a>
            <a class="btn btn-dark" asp-page="./DeleteRestaurant" asp-route-restarauntId="@Model.ID">Delete</a>
        </div>
    </div>