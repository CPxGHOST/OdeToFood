@page "{restaurantId:int}"
@model OdeToFood.Pages.CustomPages.DetailsModel
@{
    ViewData["Title"] = Model.restaurant.Name;
}


@if (TempData["Message"] != null) { 
    <div class="alert alert-info">@TempData["Message"]</div>
}

<h1>@Model.restaurant.Name</h1>
<h4>Id : @Model.restaurant.Id</h4>
<h4>Location : @Model.restaurant.Location</h4>
<h4>Food Type : @Model.restaurant.CuisineType</h4>

<div class="btn-group">
    <a class="btn btn-lg btn-primary" asp-page="./List">All Restaurants</a>
</div>