@using OdeToFood.Core
@model Restaurant

<div class="card" style="margin-bottom:2rem">
    <h2 class="card-header">@Model.Name</h2>
    <div class="card-body">
        <h5 class="card-title">Cuisine Type : @Model.CuisineType</h5>
        <p class="card-text">Location : @Model.Location</p>
        <a asp-page="./Details" class="btn btn-info"  asp-route-restaurantId="@Model.Id">Details</a>
        <a asp-page="./EditDetails" class="btn btn-primary" asp-route-restaurantId="@Model.Id">Edit</a>
        <a asp-page="./DeleteRestaurant" class="btn btn-danger" asp-route-restaurantId ="@Model.Id">Delete</a>
    </div>
</div>